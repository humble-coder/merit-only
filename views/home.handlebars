<form id="applicantForm" method="post" action="/save-applicant" enctype="application/x-www-form-urlencoded">
	<section id="contactInformation">
		<label for="firstName">First Name</label>
		<input id="firstName" type="text" inputmode="latin-name" name="firstName" maxlength="30" minlength="1" required>
		<label for="lastName">Last Name</label>
		<input id="lastName" type="text" inputmode="latin-name" name="lastName" maxlength="30" minlength="1" required>
		<label for="email">Email</label>
		<input id="email" type="email" maxlength="30" name="email" pattern="\S+@\w+\.\w+" required>
		<label for"phoneNumber">Phone Number</label>
		<input id="phoneNumber" type="tel" maxlength="20" name="phoneNumber" required>
	</section>
	<section id="resume-section">
		<input type="file" accept=".txt, .doc, .docx, .rtf, .pdf, .pages" name="resume" id="resume-upload">
		<textarea rows="50" cols="50" id="resume-display"></textarea>
	</section>
	<input type="submit" value="Finish">
</form>

<script>
  var resumeUpload = HTML.query('#resume-upload'),
  resumeDisplay = HTML.query('#resume-display');
  resumeUpload.addEventListener("change", displayResume, false);
  function displayResume() {
    var file = this.files[0];
    var reader = new FileReader();
    reader.onload = function(e) {
    	resumeDisplay.value = e.target.result;
    	resumeUpload.remove();
    };
    reader.readAsText(file);
  }
</script>